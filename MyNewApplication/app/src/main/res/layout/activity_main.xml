<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WhisperSend🕵️"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />


        <!-- Phone and Message Inputs -->
        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number"
            android:inputType="phone"
            android:background="@drawable/edit_text_bg"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Message"
            android:inputType="textMultiLine"
            android:background="@drawable/edit_text_bg"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/encryptionKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Encryption Key"
            android:inputType="text"
            android:background="@drawable/edit_text_bg"
            android:textColor="#FFFFFF"
            android:textColorHint="#AAAAAA"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Encryption Technique Dropdown -->
        <Spinner
            android:id="@+id/encryptionTechniqueSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#1B1B1B"
            android:padding="12dp"
            android:popupBackground="#2C2C2C"
            android:theme="@style/SpinnerTheme" />

        <Button
            android:id="@+id/encryptButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ENCRYPT MESSAGE"
            android:backgroundTint="#75C674"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/encryptedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encrypted Message:"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="16dp" />

        <!-- Decryption Technique Dropdown -->
        <Spinner
            android:id="@+id/decryptionTechniqueSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="#1B1B1B"
            android:padding="12dp"
            android:popupBackground="#2C2C2C"
            android:theme="@style/SpinnerTheme" />

        <Button
            android:id="@+id/decryptButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DECRYPT MESSAGE"
            android:backgroundTint="#75C674"
            android:textColor="#000000"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/decryptedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Decrypted Message:"
            android:textColor="#AAAAAA"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/sendEncryptedSmsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEND ENCRYPTED SMS"
            android:backgroundTint="#1B1B1B"
            android:textColor="#75C674" />
    </LinearLayout>
</ScrollView>